{
  "name": "flaregun",
  "type": "module",
  "version": "3.5.10",
  "description": "JavaScript utils for Cloudflare Workers.",
  "main": "index.js",
  "scripts": {
    "start": "npm install && npx -y wrangler dev --env dev --live-reload",
    "build": "npx -y treeder/flaregun build",
    "run": "npx -y wrangler dev --env dev",
    "test:run": "node test/test.js",
    "test": "npx -y treeder/testkit --port=8787",
    "setup": "npx -y treeder/flaregun setup",
    "deploy": "npx -y wrangler deploy --env dev",
    "deploy:preview": "npx -y wrangler versions upload --env dev",
    "deploy:dev": "npx -y wrangler deploy --env dev",
    "deploy:prod": "npx -y wrangler deploy --env prod",
    "deploy:prod:preview": "npx -y wrangler versions upload --env prod",
    "pushdev": "git push origin --force `git symbolic-ref --short HEAD`:dev"
  },
  "bin": "./bin/flaregun.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/treeder/flaregun.git"
  },
  "author": "treeder",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/treeder/flaregun/issues"
  },
  "homepage": "https://github.com/treeder/flaregun#readme",
  "dependencies": {
    "api": "github:treeder/api",
    "dotenv": "^17.2.3",
    "jsonc-parse": "^1.5.5",
    "models": "github:treeder/models#semver:^1",
    "nanoid": "^5.0.6"
  },
  "devDependencies": {
    "migrations": "github:treeder/migrations#semver:^1",
    "once": "github:treeder/once#semver:^1",
    "prettier": "^3.6.2",
    "testkit": "github:treeder/testkit#semver:^2"
  },
  "prettier": {
    "tabWidth": 2,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all",
    "printWidth": 120,
    "bracketSameLine": true
  }
}
